<assembly>
	<id>dist-linux-32</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>../../skels/common</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>  <!-- Non-executables. -->
			<directory>../../skels/linux</directory>
			<outputDirectory>/</outputDirectory>
			<excludes>
				<exclude>**/*.sh</exclude>
			</excludes>
		</fileSet>
		<fileSet>  <!-- Executables. -->
			<directory>../../skels/linux</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>**/*.sh</include>
			</includes>
			<fileMode>755</fileMode>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>superluminal2-linux.jar</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>